<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/logoAdminPanel"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@mipmap/logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/logoAdminPanel"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/digital_canteen"
                    android:textColor="@color/textSecondaryColor"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/kitchentextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Kitchen Staff Menu"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="16dp" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/today_s_income"
                    android:textAlignment="center"
                    android:textColor="@color/textSecondaryColor"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/adminPanelAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Rs.0"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="30dp"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/viewOrderCard"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="129dp">

                    <ImageView
                        android:id="@+id/viewOrderLogo"
                        android:layout_width="163dp"
                        android:layout_height="66dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="112dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/view_order_logo" />

                    <TextView
                        android:id="@+id/logoAdminPanelText"
                        android:layout_width="269dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewOrderLogo"
                        android:layout_alignEnd="@+id/viewOrderLogo"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="62dp"
                        android:layout_marginLeft="-213dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="-47dp"
                        android:layout_toRightOf="@+id/viewOrderLogo"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="View and Manage Orders"
                        android:textAlignment="center"
                        android:textColor="@color/textPrimaryColor"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/viewOrderLogoLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logoAdminPanelText"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/viewOrderLogo"
                        android:src="@drawable/horizantle_line" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/addFoodCard"

                android:layout_width="wrap_content"
                android:layout_height="139dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="142dp">

                    <ImageView
                        android:id="@+id/addFoodLogo"
                        android:layout_width="175dp"
                        android:layout_height="70dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="113dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/add_food_logo" />

                    <TextView
                        android:id="@+id/addFoodLogoText"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addFoodLogo"
                        android:layout_alignEnd="@+id/addFoodLogo"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="99dp"
                        android:layout_marginLeft="-80dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="-5dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Add New Food"
                        android:textAlignment="center"
                        android:textColor="@color/textPrimaryColor"
                        android:textSize="18dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/viewFoodCard"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="142dp">

                    <ImageView
                        android:id="@+id/viewFoodLogo"
                        android:layout_width="175dp"
                        android:layout_height="70dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="113dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/checklist" />

                    <TextView
                        android:id="@+id/viewFoodLogoText"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewFoodLogo"
                        android:layout_alignEnd="@+id/viewFoodLogo"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="99dp"
                        android:layout_marginLeft="-80dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="-5dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="View Food Count"
                        android:textAlignment="center"
                        android:textColor="@color/textPrimaryColor"
                        android:textSize="18dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>